# Application Settings
APP_NAME=claude-relay-station
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database (External PostgreSQL Container)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:15432/relay_station
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (External Redis Container)
REDIS_URL=redis://:your_redis_password@localhost:16379/0
REDIS_POOL_SIZE=10

# Upstream API (Third-party API)
UPSTREAM_API_URL=https://api.anthropic.com
UPSTREAM_API_KEY=your_anthropic_api_key_here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
